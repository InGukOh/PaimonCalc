<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:background="@color/askbtn">

    <LinearLayout
        android:id="@+id/linearLayout2"
        android:layout_width="443dp"
        android:layout_height="843dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:layout_width="429dp"
            android:layout_height="match_parent"

            android:src="@drawable/bg_main_paimonmain"></ImageView>


    </LinearLayout>

    <LinearLayout
        android:id="@+id/gridLayout"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginHorizontal="20dp"
        android:layout_marginTop="260dp"
        android:background="@drawable/asset_layout_edge"
        android:gravity="center"
        android:orientation="vertical"
        android:padding="20dp"
        android:textAlignment="center"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/linearLayout2">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:textAlignment="center">

            <com.example.paimonwillcalc.OutlineTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:fontFamily="@font/rtc"

                android:gravity="center"
                android:text="오늘은 "
                android:textAlignment="center"
                android:textColor="@color/black"
                android:textSize="20dp"
                android:textStyle="bold"

                app:textStroke="true"
                app:textStrokeColor="#FFFFFF"
                app:textStrokeWidth="4.0" />

            <com.example.paimonwillcalc.OutlineTextView
                android:id="@+id/whatDate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:fontFamily="@font/rtc"
                android:gravity="center"
                android:shadowColor="#000000"
                android:shadowRadius="5"
                android:text="null"
                android:textAlignment="center"
                android:textColor="#00F500"
                android:textSize="25dp"
                android:textStyle="bold"
                app:textStroke="true"
                app:textStrokeColor="#000000"
                app:textStrokeWidth="1.0" />

            <com.example.paimonwillcalc.OutlineTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:fontFamily="@font/rtc"
                android:gravity="center"
                android:text="요일 이야!"
                android:textAlignment="center"
                android:textColor="@color/black"
                android:textSize="20dp"
                android:textStyle="bold"
                app:textStroke="true"
                app:textStrokeColor="#FFFFFF"
                app:textStrokeWidth="4.0" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:textAlignment="center">

            <com.example.paimonwillcalc.OutlineTextView
                android:id="@+id/CharacterInfo"
                android:layout_width="204dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                android:background="@drawable/asset_p01characterinfo"
                android:fontFamily="@font/rtc"
                android:gravity="center"
                android:shadowColor="#000000"
                android:shadowRadius="2"
                android:text="특성 육성 소재 확인"
                android:textAlignment="center"
                android:textColor="#0f0f0f"
                android:textSize="25dp"

                android:textStyle="bold"
                app:textStroke="true"
                app:textStrokeColor="#FFFFFF"
                app:textStrokeWidth="0.2" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:textAlignment="center">

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:textAlignment="center">

            <com.example.paimonwillcalc.OutlineTextView
                android:id="@+id/WeaponInfo"
                android:layout_width="204dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                android:background="@drawable/asset_p01characterinfo"
                android:fontFamily="@font/rtc"
                android:gravity="center"
                android:shadowColor="#000000"
                android:shadowRadius="2"
                android:text="무기 돌파재료 확인"
                android:textAlignment="center"
                android:textColor="#0f0f0f"
                android:textSize="25dp"
                android:textStyle="bold"
                app:textStroke="true"
                app:textStrokeColor="#FFFFFF"
                app:textStrokeWidth="0.2"

                />

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:textAlignment="center">

            <com.example.paimonwillcalc.OutlineTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:fontFamily="@font/rtc"
                android:gravity="center"
                android:text="페이몬이 원석을 계산 해 줄까?"
                android:textAlignment="center"
                android:textColor="@color/black"
                android:textSize="20dp"
                android:textStyle="bold"
                app:textStroke="true"
                app:textStrokeColor="#FFFFFF"
                app:textStrokeWidth="4.0" />
        </LinearLayout>

        <android.widget.Button
            android:id="@+id/toPage02"
            android:layout_width="300dp"
            android:layout_height="120dp"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"
            android:background="@drawable/asset_gem_color_fp01"
            android:gravity="center"
            android:text="계산을 부탁해\n페이몬!"
            android:textSize="30dp"
            android:textStyle="bold"
            android:textColor="@color/black"
            />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>